<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Other attributes -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light" >
        <item name="colorAccent">@android:color/white</item>
        <!-- To remove divider of the number picker -->
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogCustomStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item> <!-- Change this to the color you want for the Confirm button -->
        <item name="android:textColorSecondary">@color/black</item> <!-- Change this to the color you want for the Cancel button -->
    </style>
</resources>